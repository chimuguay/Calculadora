<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="731dp" android:id="@+id/guideline"/>
    <TextView
            android:layout_width="331dp"
            android:layout_height="50dp" tools:layout_editor_absoluteY="6dp"
            tools:layout_editor_absoluteX="41dp" android:id="@+id/tv_dist" android:textSize="24sp"/>
    <TableLayout
            android:layout_width="399dp"
            android:layout_height="537dp" tools:layout_editor_absoluteY="63dp" tools:layout_editor_absoluteX="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/boff" android:textSize="18sp"
                    android:textStyle="bold" android:background="@android:color/holo_orange_dark"
                    android:layout_marginBottom="16dp" android:onClick="salir"/>
            <Button
                    android:text="RND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b_md"
                    android:textSize="18sp" android:textStyle="bold"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:onClick="Rnd"/>
            <Button
                    android:text="DEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b_borrarultimo"
                    android:background="@android:color/holo_red_dark" android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginBottom="16dp" android:onClick="borrarUlt"/>
            <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bborrartodo"
                    android:background="@android:color/holo_red_dark" android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginBottom="16dp" android:onClick="BorrarTodo"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="N!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bfactorial" android:textSize="18sp"
                    android:singleLine="false" android:textStyle="bold"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:onClick="Factorial"/>
            <Button
                    android:text="X^n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bpotencialn"
                    android:background="@android:color/darker_gray" android:textStyle="bold" android:textSize="18sp"
                    android:layout_marginBottom="16dp" android:onClick="Expn"/>
            <Button
                    android:text="X^2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bcuadrado" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold" android:background="@android:color/darker_gray"
                    android:onClick="ExpCuadrado"/>
            <Button
                    android:text="X^3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bcubo"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold" android:onClick="ExpCubico"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="SEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bsen"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:onClick="Sen"/>
            <Button
                    android:text="COS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ bcos"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold" android:onClick="Cos"/>
            <Button
                    android:text="TAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btan" android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray" android:onClick="Tan"/>
            <Button
                    android:text="RAIZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/braiz"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold" android:onClick="Raiz"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b9"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b8" android:textStyle="bold"
                    android:textSize="18sp" android:textAllCaps="true" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b7"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bdiv" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b6"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b5" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b4"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bmult" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold" android:background="@android:color/darker_gray"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b3"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b2" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b1" android:autoText="false"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/brestar" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b0"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bpunto" android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bigual"
                    android:background="@android:color/darker_gray" android:layout_marginBottom="16dp"
                    android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bsuma" android:textSize="18sp"
                    android:textStyle="bold" android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>